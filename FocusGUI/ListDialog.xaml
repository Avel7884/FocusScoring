        <TextBox Name="ListName" TextWrapping="Wrap" Text=""  Margin='5' Width="150" HorizontalAlignment="Left"/>
        
        <Label Content="Отображаемые параметры" Background="{x:Null}" FontFamily="Leelawadee UI Semilight" MinHeight="27" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <DataGrid AutoGenerateColumns="False" Name="ParametersGrid"/><!--
            <DataGrid.Columns>
                <DataGridTextColumn Binding="Binding Item1" />
                <DataGridCheckBoxColumn Binding="Binding Item2" />
            </DataGrid.Columns>
        </DataGrid>-->
        
        <Label Content="Список ИНН" Background="{x:Null}" FontFamily="Leelawadee UI Semilight" MinHeight="27" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>        
        <TextBox Name="Inns"  TextWrapping="Wrap" Text=""  Margin="5,5,5,10"
                 Height="120"
                 AcceptsReturn="True" 
                 AcceptsTab="True" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">            
            <Button x:Name="SaveButton" Content="Создать" Margin="5,5,5,5" Background="#FF4F926A" BorderBrush="#FF256F3B" BorderThickness="2" Foreground="White" FontFamily="Leelawadee UI Semilight" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="76" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена"  Margin="5,5,5,5" Background="#FFFBFBFB" FontFamily="Nirmala UI Semilight" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CloseButton_Click"/>
        </StackPanel>
    </StackPanel>

