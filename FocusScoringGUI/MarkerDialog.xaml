<Window x:Class="FocusScoringGUI.MarkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="Marker Properties"
        MaxHeight="490"
        Width="300"
        MinHeight="10"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}" d:DesignHeight="490">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="1*" />
            <RowDefinition  Height="1*" />
            <RowDefinition  Height="1*" />
            <RowDefinition  Height="2*" />
            <RowDefinition  Height="1*" />
            <RowDefinition  Height="8*" />
            <RowDefinition  Height="1*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />    
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        
        <CheckBox Name = "IsAffiliated"></CheckBox>
        
        <Label Grid.Column="0" Grid.Row="0"> Наименование: </Label>
        <TextBox Grid.Column="1" Grid.Row="0" Name = "Name" TextWrapping="Wrap"
                 HorizontalAlignment="Left" VerticalAlignment="Center"/>
        
        <Label Grid.Column="0" Grid.Row="1" Cursor="None"> Категория: </Label>
        <ComboBox Grid.Column="1" Grid.Row="1" Name="Colour"
                  HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBoxItem>Зеленый</ComboBoxItem>
            <ComboBoxItem>Желтый</ComboBoxItem>
            <ComboBoxItem>Красный</ComboBoxItem>
        </ComboBox>
        
        <Label Grid.Column="0" Grid.Row="2"> Важность: </Label>
        <ComboBox Grid.Column="1" Grid.Row="2" Name="Importance" 
                  HorizontalAlignment="Left" VerticalAlignment="Center"/>
        
        <Label Grid.Column="0" Grid.Row="3"> Описание: </Label>
        <TextBox Grid.Column="1" Grid.Row="3"
                 HorizontalAlignment="Left" VerticalAlignment="Center"
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 Name = "Description" 
                 MinHeight="50" />

        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4"> Код маркера: </Label>
        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5"
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 AcceptsTab="True" 
                 VerticalScrollBarVisibility="Visible"
                 HorizontalScrollBarVisibility="Auto"
                 Name = "Code" 
                 MinHeight="50"/>
        
        <Button Grid.Column="0" Grid.Row="6" Name="Cansel" Click="Cansel_Click"
                HorizontalAlignment="Center" VerticalAlignment="Center"> Cancel </Button>
        <Button Grid.Column="1" Grid.Row="6" Name="Ok" Click="Ok_Click" 
                Width="80" HorizontalAlignment="Center" VerticalAlignment="Center"> Ok </Button>
        
    </Grid>
</Window>