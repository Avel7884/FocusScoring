<Window x:Class="FocusScoringGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="FoucsScoring 0.1"
        Icon="Icon1.ico"
        Height="Auto" Width="833">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135*" />
            <ColumnDefinition Width="69*" />
            <ColumnDefinition Width="254*" />
            <ColumnDefinition Width="290*" />
            <ColumnDefinition Width="77*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="421*"/>
            <RowDefinition Height="24*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <ListView Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  x:Name="ListView"
                  MouseDoubleClick="ListSelected_Click" Background="#FF4D9068" Grid.RowSpan="2" BorderThickness="1"/>


        <Button Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"  Click="DeleteList_Click" Content="Удалить" MaxHeight="20" MaxWidth="68" Height="20"/>
        <Label Content="Введите ИНН контрагента" Foreground="Gray" VerticalAlignment="Top" HorizontalAlignment="Right" Height="24" Grid.Column="2" Width="154"/>

        <ListView Grid.Column="2"
                  Grid.ColumnSpan="3"
                  Grid.Row="2"
                  x:Name="CompanyList"
                  MouseDoubleClick="CompanySelected_Click" Grid.RowSpan="1">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Inn}">Инн</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="100">Компания</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Score}">Рейтинг</GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>


        <ListView Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  x:Name="MarkersList"
                  MouseDoubleClick="MarkerSelected_Click" Grid.RowSpan="1">

            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Colour}" Height="16" Width="16"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Компания" Width="Auto" />
                </GridView>
            </ListView.View>

        </ListView>

        <!--<Button Click="AllMarkers_OnClick" Grid.Column="5" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="74" Content="Все маркеры" Margin="117,1"/>-->
        <StackPanel Grid.Row="1"  Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#FF4D9068">
            <Image Source="pack://application:,,,/src/plus.png" Cursor="Hand"/>
            <Button Content="Создать список" x:Name="AddList" Background="#FF4D9068" BorderThickness="1,1,1,0" Click="AddList_Click" Foreground="White" BorderBrush="#FFABADB3" Cursor="Hand"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="167">
            <TextBox x:Name="Inn" MinWidth="110" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" PreviewTextInput="Inn_PreviewTextInput" MaxLength="13"/>
            <Button Click="ButtonDataUpdate_Click"  Content="Добавить" BorderBrush="{x:Null}" Grid.Column="2" Grid.Row="1"/>
        </StackPanel>
        <Menu Grid.Column="4" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">
            <MenuItem Header="Настройки">
                <Button Click="AllMarkers_OnClick" Content="Маркеры" BorderThickness="0" Padding="0" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
