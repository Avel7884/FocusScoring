<Window x:Class="FocusScoringGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState = "Maximized"
        WindowStyle = "None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />    
            <RowDefinition Height="2*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <TextBox Text="Добавить контрагента" Name="Inn" Grid.Column="1" Grid.Row="1" />

        <Button Click="ButtonDataUpdate_Click" Grid.Column="2" Grid.Row="1" >Поиск</Button>     
        
      <DataGrid Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                AutoGenerateColumns="False" 
                HorizontalAlignment="Center" 
                Name="CompanyTable" 
                VerticalAlignment="Top"
                DataContext="Binding ElementName=DataEntrydataGrid">
          
          <DataGrid.Columns >
          <DataGridTextColumn Binding="{Binding Path=Inn}" MinWidth="50" />
          <DataGridTextColumn Binding="{Binding Path=Name}" MinWidth="50" MaxWidth="300" />
          <DataGridTextColumn Binding="{Binding Path=Score}" MinWidth="50" />
        </DataGrid.Columns>
      </DataGrid>
        
        <TextBox Text="Найти контрагента" Name="Inn2" Grid.Column="3" Grid.Row="1" />

        <Button Click="ButtonMarkersUpdate_Click" Grid.Column="4" Grid.Row="1" >Поиск</Button>    
        
        <DataGrid Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  AutoGenerateColumns="False" 
                  HorizontalAlignment="Center" 
                  Name="MarkersTable" 
                  VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Colour}" MaxWidth="17" />
                <DataGridTextColumn Binding="{Binding Path=Description}" MinWidth="50" />
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
