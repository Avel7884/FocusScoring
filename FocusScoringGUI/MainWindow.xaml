<Window x:Class="FocusScoringGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState = "Maximized"
        WindowStyle = "None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />    
            <RowDefinition Height="2*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="1*" />                
        </Grid.RowDefinitions>

        
        <TextBox Grid.Column="0" Grid.Row="1" Name="ListName" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="120"/>  
        <Button Grid.Column="1" Grid.Row="1" Click="ButtonAddList_Click" Name="AddList" HorizontalAlignment="Center" VerticalAlignment="Center">Добавить</Button>  
        <Button Grid.Column="1" Grid.Row="3" Click="DeleteList_Click" Name="DeleteList" HorizontalAlignment="Center" VerticalAlignment="Center">Удалить</Button>  
        
        <ListView Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  Name="ListView"
                  MouseDoubleClick="ListSelected_Click">
            
        </ListView>
       
        
        <TextBox Name="Inn" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="120"/>
        <Button Click="ButtonDataUpdate_Click" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >Поиск</Button>     
        
        <ListView Grid.Column="2"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  Name="CompanyList"
                  MouseDoubleClick="CompanySelected_Click">
            
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Inn}">Инн</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="100">Компания</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Score}">Рейтинг</GridViewColumn>
                </GridView>
            </ListView.View>
            
        </ListView>
        
        
        <ListView Grid.Column="4"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  Name="MarkersList"
                  MouseDoubleClick="MarkerSelected_Click">
            
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Colour}">Инн</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Description}">Компания</GridViewColumn>
                </GridView>
            </ListView.View>
            
        </ListView>
        
        
        
    </Grid>
</Window>
