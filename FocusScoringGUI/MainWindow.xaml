<Window x:Class="FocusScoringGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="FoucsScoring 0.1"
        Icon="Icon1.ico"
        d:DesignHeight="560" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*" MinWidth="124" />
            <ColumnDefinition Width="71*" MinWidth="61" />
            <ColumnDefinition Width="261*" MinWidth="100"/>
            <ColumnDefinition Width="172*"/>
            <ColumnDefinition Width="100*" MinWidth="50"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="36*" MinHeight="34"/>
            <RowDefinition Height="22*" MinHeight="21"/>
            <RowDefinition Height="25*" MinHeight="24"/>
            <RowDefinition Height="396*" MinHeight="200"/>
            <RowDefinition MinHeight="24" Height="24*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="2" Background="#FF4D9068"/>
        <Border BorderBrush="#FF7DD4A0" Height="1" Grid.Row="1" Grid.ColumnSpan="6" VerticalAlignment="Top" Background="#FF7DD4A0"/>
        <TextBlock Text="Мои списки" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="#FF7DD48E" Height="16" Width="66"/>
        <ListView Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  x:Name="ListView"
                MouseUp="ListSelected_Click" Background="#FF4D9068" Grid.RowSpan="2" BorderThickness="2" Foreground="White">
            <!--TODO OnHover Discription-->
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="ToolTip" Value="{Binding Description}"/>
                </Style>
            </ListView.Resources>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Копировать"></MenuItem>
                    <MenuItem Header="Вставить"></MenuItem>
                    <MenuItem Header="Вырезать"></MenuItem>
                    <MenuItem Header="Удалить" Click="DeleteList_Click"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <TextBlock TextWrapping="Wrap" Name="TextBlockList" Grid.Column="2" Grid.Row="1" FontSize="18" FontFamily="Calibri" FontStyle="Italic" VerticalAlignment="Bottom" Height="22"/>
        <TextBlock TextWrapping="Wrap" Name="TextBlockName" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left"/>
        <Button Click="DeleteList_Click" Content="Удалить" Margin="0,-76,0,76" />


        <ListView Grid.Column="2"
                  Grid.ColumnSpan="1"
                  Grid.Row="3"
                  x:Name="CompanyList"
                  MouseUp="CompanySelected_Click"
                  GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler"
                  >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Inn}">Инн</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="150">Компания</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Score}">Рейтинг</GridViewColumn>
                    <!--<GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding CLight}" MaxHeight="32" MaxWidth="32"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>-->
                </GridView>
            </ListView.View>

        </ListView>


        <ListView Grid.Column="3"
                  Grid.ColumnSpan="3"
                  Grid.Row="3"
                  x:Name="MarkersList"
                  MouseDoubleClick="MarkerSelected_Click"
                 
                  >
 <!--GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler"-->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="X">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Colour}" MaxHeight="32" MaxWidth="32"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="400" Header="Описание">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding Description}" FontSize="14"></TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
        <Button Grid.ColumnSpan="2" Grid.Row="1" Click="AddList_Click" Cursor="Hand" Background="{x:Null}" BorderBrush="#FFABADB3" BorderThickness="2,2,2,0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Image Source="pack://application:,,,/src/plus.png" Height="18" Width="18"/>
                <TextBlock Text="Создать список" Foreground="White"/>
            </StackPanel>
        </Button>
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Height="20" Width="311" Margin="0,0,-20,0">
            <TextBlock Text="Введите ИНН контрагента" Foreground="Gray" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="Inn" MinWidth="110" PreviewTextInput="Inn_PreviewTextInput" MaxLength="12" TextChanged="Inn_TextChanged">
                <TextBox.InputBindings>
                    <KeyBinding Key="C" Modifiers="Control" Command="ApplicationCommands.NotACommand"/>
                    <KeyBinding Key="X" Modifiers="Control" Command="ApplicationCommands.NotACommand"/>
                    <KeyBinding Key="F" Modifiers="Control" Command="ApplicationCommands.NotACommand"/>
                </TextBox.InputBindings>
            </TextBox>
            <Button Click="ButtonDataUpdate_Click"  Content="Добавить" BorderBrush="{x:Null}">
                <Button.ToolTip>
                    <ToolTip>
                        Добавить ИНН в список
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>
        <DockPanel Grid.Row="5" Grid.ColumnSpan="99">
            <TextBlock Text="Ключ: осталось" VerticalAlignment="Center"/>
            <Menu HorizontalAlignment="Right">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="Настройки"  FontSize="14" HorizontalAlignment="Right">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/src/stt.png"/>
                    </MenuItem.Icon>
                    <MenuItem Click="AllMarkers_OnClick" Header="Маркеры"/>
                </MenuItem>
            </Menu>
        </DockPanel>

    </Grid>
</Window>
