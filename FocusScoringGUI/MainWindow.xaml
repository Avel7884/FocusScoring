<Window x:Class="FocusScoringGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="FoucsScoring 0.1"
        Icon="Icon1.ico"
        Height="Auto" Width="Auto" d:DesignHeight="560">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*" MinWidth="124" />
            <ColumnDefinition Width="71*" MinWidth="61" />
            <ColumnDefinition Width="261*" MinWidth="100"/>
            <ColumnDefinition Width="172*"/>
            <ColumnDefinition Width="100*" MinWidth="50"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="36*" MinHeight="34"/>
            <RowDefinition Height="22*" MinHeight="21"/>
            <RowDefinition Height="25*" MinHeight="24"/>
            <RowDefinition Height="396*" MinHeight="200"/>
            <RowDefinition MinHeight="24" Height="24*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="2" Background="#FF4D9068"/>
        <Border BorderBrush="#FF7DD4A0" Height="1" Grid.Row="1" Grid.ColumnSpan="6" VerticalAlignment="Top" Background="#FF7DD4A0"/>
        <TextBlock Text="Мои списки" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="#FF7DD48E" Height="16" Width="66"/>
        <ListView Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  x:Name="ListView"
                MouseUp="ListSelected_Click" Background="#FF4D9068" Grid.RowSpan="2" BorderThickness="2" Foreground="White">
            <!--TODO OnHover Discription-->
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="ToolTip" Value="{Binding Path=Description}"/>
                </Style>
            </ListView.Resources>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Копировать"></MenuItem>
                    <MenuItem Header="Вставить"></MenuItem>
                    <MenuItem Header="Вырезать"></MenuItem>
                    <MenuItem Header="Удалить" Click="DeleteList_Click"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <TextBlock TextWrapping="Wrap" Name="TextBlockList" Grid.Column="2" Grid.Row="2" FontSize="18" FontFamily="Calibri" FontStyle="Italic" VerticalAlignment="Bottom" Height="22"/>
        <TextBlock TextWrapping="Wrap" Name="TextBlockName" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" Width="0"/>
        <Button Click="DeleteList_Click" Content="Удалить" Margin="0,-76,0,76" />


        <ListView Grid.Column="2"
                  Grid.ColumnSpan="1"
                  Grid.Row="3"
                  x:Name="CompanyList"
                  MouseUp="CompanySelected_Click">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Inn}">Инн</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="100">Компания</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Score}">Рейтинг</GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>


        <ListView Grid.Column="3"
                  Grid.ColumnSpan="3"
                  Grid.Row="3"
                  x:Name="MarkersList"
                  MouseDoubleClick="MarkerSelected_Click">

            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Colour}" Height="16" Width="16"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Компания" Width="Auto" />
                </GridView>
            </ListView.View>

        </ListView>

        <!--<Button Click="AllMarkers_OnClick" Grid.Column="5" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="74" Content="Все маркеры" Margin="117,1"/>-->
        <!--<Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  BorderThickness="1,1,1,0" BorderBrush="#FFABADB3" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal"   HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                <Image Source="pack://application:,,,/src/plus.png" Cursor="Hand" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="19" Width="19"/>
                <Button HorizontalAlignment="Right" Content="Создать список" x:Name="AddList" Background="#FF4D9068" Click="AddList_Click" Foreground="White"  Cursor="Hand" BorderBrush="{x:Null}"/>
            </StackPanel>
        </Border>-->
        <Button Grid.ColumnSpan="2" Grid.Row="1" Click="AddList_Click" Cursor="Hand" Background="{x:Null}" BorderBrush="#FFABADB3" BorderThickness="2,2,2,0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Image Source="pack://application:,,,/src/plus.png" Height="18" Width="18"/>
                <TextBlock Text="Создать список" />
            </StackPanel>
        </Button>
        <StackPanel Grid.Column="3" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Height="20" Width="311" Margin="0,0,-20,0">
            <TextBox x:Name="Inn" MinWidth="110" PreviewTextInput="Inn_PreviewTextInput" MaxLength="12"/>
            <Button Click="ButtonDataUpdate_Click"  Content="Добавить" BorderBrush="{x:Null}"/>
            <TextBlock Text="Введите ИНН контрагента" Foreground="Gray" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.ColumnSpan="99" VerticalAlignment="Center">
        <Menu HorizontalAlignment="Right">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
                <MenuItem Header="Настройки"  FontSize="14" HorizontalAlignment="Right">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/src/stt.png"/>
                    </MenuItem.Icon>
                    <MenuItem Click="AllMarkers_OnClick" Header="Маркеры"/>
                </MenuItem>
            </Menu>
        </StackPanel>

    </Grid>
</Window>
