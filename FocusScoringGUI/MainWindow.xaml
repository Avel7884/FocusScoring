<Window x:Class="FocusScoringGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="FoucsScoring 0.1"
        Icon="Icon1.ico"
        Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="124*" MinWidth="124" />
            <ColumnDefinition Width="64*" MinWidth="61" />
            <ColumnDefinition Width="254*" MinWidth="100"/>
            <ColumnDefinition Width="197*" MinWidth="197" />
            <ColumnDefinition Width="50*" MinWidth="50"/>
            <ColumnDefinition Width="71*" MinWidth="71" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="34*" MinHeight="34"/>
            <RowDefinition Height="21*" MinHeight="21"/>
            <RowDefinition Height="24*" MinHeight="24"/>
            <RowDefinition Height="397*" MinHeight="200"/>
            <RowDefinition Height="24*" MinHeight="24"/>
            <RowDefinition Height="4*" MinHeight="4"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="15" Grid.ColumnSpan="2" Background="#FF4D9068"/>
        <Border BorderBrush="#FF7DD4A0" Height="1" Grid.Row="1" Grid.ColumnSpan="6" VerticalAlignment="Top" Background="#FF7DD4A0"/>
        <TextBlock Text="Мои списки" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="#FF7DD48E"/>
        <ListView Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  x:Name="ListView"
                MouseUp="ListSelected_Click" Background="#FF4D9068" Grid.RowSpan="3" BorderThickness="1,1,1,0" Foreground="White">
            <!--TODO OnHover Discription-->
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="ToolTip" Value="{Binding Path=Description}"/>
                </Style>
            </ListView.Resources>
        </ListView>

        <TextBlock TextWrapping="Wrap" Name="TextBlockList" Grid.Column="2" Grid.Row="1" FontSize="18" Grid.RowSpan="2" FontFamily="Calibri" FontStyle="Italic" VerticalAlignment="Bottom"/>
        <TextBlock TextWrapping="Wrap" Name="TextBlockName" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" Width="0"/>
        <Button Grid.Column="1" Grid.Row="4" VerticalAlignment="Center"  Click="DeleteList_Click" Content="Удалить" MaxHeight="20" MaxWidth="68" Height="20" Margin="0,2"/>


        <ListView Grid.Column="2"
                  Grid.ColumnSpan="1"
                  Grid.Row="3"
                  x:Name="CompanyList"
                  MouseUp="CompanySelected_Click" Grid.RowSpan="2">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Inn}">Инн</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="100">Компания</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Score}">Рейтинг</GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>


        <ListView Grid.Column="3"
                  Grid.ColumnSpan="3"
                  Grid.Row="3"
                  x:Name="MarkersList"
                  MouseDoubleClick="MarkerSelected_Click" Grid.RowSpan="2">

            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Colour}" Height="16" Width="16"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Компания" Width="Auto" />
                </GridView>
            </ListView.View>

        </ListView>

        <!--<Button Click="AllMarkers_OnClick" Grid.Column="5" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="74" Content="Все маркеры" Margin="117,1"/>-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="2" Height="19" Width="89">
            <!--<Image Source="pack://application:,,,/src/plus.png" Cursor="Hand"/>-->
            <Button HorizontalAlignment="Right" Content="Создать список" x:Name="AddList" Background="#FF4D9068" BorderThickness="1,1,1,0" Click="AddList_Click" Foreground="White" BorderBrush="#FFABADB3" Cursor="Hand"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Height="20">
            <TextBox x:Name="Inn" MinWidth="110" PreviewTextInput="Inn_PreviewTextInput" MaxLength="12"/>
            <Button Click="ButtonDataUpdate_Click"  Content="Добавить" BorderBrush="{x:Null}"/>
            <TextBlock Text="Введите ИНН контрагента" Foreground="Gray" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center"/>
        </StackPanel>
        <Menu Grid.Column="5" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Height="18" Margin="0,3" Width="71">
            <MenuItem Header="Настройки" >
                <MenuItem Click="AllMarkers_OnClick" Header="Маркеры" BorderThickness="0" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </MenuItem>
        </Menu>
        

    </Grid>
</Window>
