<Window x:Class="FocusScoringGUI.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FocusScoringGUI"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="175" Width="400">
    <Grid Margin="20">
        <StackPanel  >
            <TextBlock Text="Прогресс проверки" HorizontalAlignment="Center" Margin="20,20,20,20" />
            <ProgressBar Height="30" Name = "Bar" Minimum="0" Maximum="100" Value="0" />
        </StackPanel> 
    </Grid>
</Window>
